{

    "manifest_version": 2,

    "name": "Tweet Copy",

    "short_name": "TweetCopy",

    "description": "Copy tweet text content and paste it elsewhere.",

    "author": "@Rodgath",

    "version": "1.0",

    "icons": {
        "48": "icons/tweet-copy-48.png"
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.twitter.com/*"
            ],
            "js": [
                "app.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],

    "permissions": [
        "tabs"
    ]
    
}